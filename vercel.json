{
    "rewrites": [
        { "source": "/api/(.*)", "destination": "/api/$1" },
        { "source": "/(.*)", "destination": "/index.html" }
    ],
    "buildCommand": "cd packages/database && npm run build && cd ../.. && cd apps/website && npm run build",
    "outputDirectory": "apps/website/dist",
    "functions": {
        "api/**": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "installCommand": "npm install"
}
