{
    "name": "vernisai-monorepo",
    "description": "VernisAI - AI-Powered No-Code Workflow Automation. Visit https://vernis.ai for more information.",
    "author": "Monsoft Solutions, LLC (https://monsoftsolutions.com)",
    "private": true,
    "type": "module",
    "scripts": {
        "check": "turbo run check",
        "dev": "turbo run dev",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
        "typecheck": "turbo run typecheck",
        "validate": "npm run format && turbo run validate && npm run format:check",
        "clean": "turbo run clean",
        "prepare": "husky",
        "pre-commit": "npm run format && lint-staged && npm run format:check"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.0.2",
        "@eslint/js": "^9.21.0",
        "eslint": "^9.21.0",
        "globals": "^15.15.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.5.3",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "turbo": "^2.4.4",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.24.1"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,css,md}": [
            "prettier --write"
        ]
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "packageManager": "npm@10.9.2"
}
