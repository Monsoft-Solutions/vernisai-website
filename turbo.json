{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "globalDependencies": ["**/.env*", "tsconfig.json"],
    "globalEnv": [
        "NODE_ENV",
        "VITE_GOOGLE_ANALYTICS_ID",
        "VITE_MICROSOFT_CLARITY_ID",
        "VITE_ENABLE_ANALYTICS",
        "VITE_ENABLE_FEATURE_X"
    ],
    "tasks": {
        "build": {
            "dependsOn": ["^build", "typecheck"],
            "outputs": ["dist/**", ".next/**", "public/dist/**"],
            "cache": true
        },
        "lint": {
            "dependsOn": ["^lint"],
            "outputs": []
        },
        "lint:fix": {
            "dependsOn": ["^lint:fix"],
            "cache": false
        },
        "typecheck": {
            "dependsOn": ["^typecheck"],
            "outputs": []
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build"]
        },
        "clean": {
            "cache": false
        },
        "format": {
            "cache": false
        },
        "validate": {
            "dependsOn": ["typecheck", "lint:fix", "format"],
            "outputs": []
        },
        "test": {
            "dependsOn": ["build"],
            "outputs": ["coverage/**"],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "test/**/*.ts",
                "test/**/*.tsx"
            ]
        }
    }
}
