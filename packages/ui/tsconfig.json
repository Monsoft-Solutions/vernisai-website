{
    "extends": "@vernisai/config/typescript/base.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "moduleResolution": "bundler",
        "target": "ES2020",
        "module": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "paths": {
            "@/*": ["./src/*"],
            "../../lib/utils": ["../utils/src/lib/utils"],
            "@/lib/utils": ["../utils/src/lib/utils"],
            "../../hooks/use-toast": ["./src/hooks/use-toast"]
        },
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
}
