{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "target": "es2020",
        "lib": ["es2020"],
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "noEmit": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
