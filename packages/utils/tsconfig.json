{
    "extends": "@vernisai/config/typescript/base.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
}
