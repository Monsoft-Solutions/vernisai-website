{
    "name": "website",
    "description": "VernisAI Website - AI-Powered No-Code Workflow Automation",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "run-s typecheck build:only generate-sitemap",
        "build:only": "vite build",
        "build:verify": "run-s typecheck build:dev",
        "build:dev": "vite build --mode development",
        "build:vercel": "node scripts/vercel-build.js",
        "generate-sitemap": "node scripts/generate-sitemap.js",
        "typecheck": "tsc -b --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
        "check": "run-p typecheck lint format:check",
        "validate": "run-s typecheck lint:fix format",
        "preview": "vite preview",
        "clean": "rm -rf dist node_modules/.vite",
        "setup:env": "node scripts/setup-env.js"
    },
    "dependencies": {
        "@hookform/resolvers": "^4.1.3",
        "@microsoft/clarity": "^1.0.0",
        "@radix-ui/react-accordion": "^1.2.3",
        "@radix-ui/react-dialog": "^1.1.6",
        "@radix-ui/react-form": "^0.1.2",
        "@radix-ui/react-label": "^2.1.2",
        "@radix-ui/react-navigation-menu": "^1.2.5",
        "@radix-ui/react-separator": "^1.1.2",
        "@radix-ui/react-slot": "^1.1.2",
        "@radix-ui/react-toast": "^1.2.6",
        "@tailwindcss/typography": "^0.5.16",
        "@vernisai/ui": "*",
        "@vernisai/utils": "*",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "framer-motion": "^12.4.10",
        "lenis": "^1.2.3",
        "lucide-react": "^0.479.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-helmet-async": "^2.0.5",
        "react-hook-form": "^7.54.2",
        "react-intersection-observer": "^9.16.0",
        "react-router-dom": "^7.3.0",
        "tailwind-merge": "^3.0.2",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@tailwindcss/postcss": "^4.0.12",
        "@tailwindcss/vite": "^4.0.12",
        "@types/node": "^22.13.10",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@vernisai/config": "*",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.21.0",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^15.15.0",
        "lockfile-lint": "^4.12.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.5.3",
        "postcss-config": "*",
        "tailwindcss": "^4.0.12",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.24.1",
        "vite": "^6.2.0"
    },
    "overrides": {
        "react-helmet-async": {
            "react": "^16.8.0 || ^17 || ^18 || ^19"
        }
    }
}
